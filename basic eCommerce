##Javascript
// Sample data for fruit categories
const fruitCategories = [
    { id: 1, name: 'Apples', items: ['Red Apple', 'Green Apple'] },
    { id: 2, name: 'Bananas', items: ['Yellow Banana'] },
    { id: 3, name: 'Berries', items: ['Strawberry', 'Blueberry'] },
    // Add more categories as needed
];

// Sample data for fruits and their prices
const fruitPrices = {
    'Red Apple': 1.5,
    'Green Apple': 1.8,
    'Yellow Banana': 1.2,
    'Strawberry': 2.5,
    'Blueberry': 3.0,
    // Add more fruits and prices as needed
};

// Sample data for user authentication (not secure for production)
const users = [
    { username: 'user1', password: 'password1' },
    { username: 'user2', password: 'password2' },
    // Add more users as needed
];

// Sample data for newsletter subscribers
let newsletterSubscribers = [];

// Sample data for delivery addresses
let deliveryAddresses = [];

// Function to display fruit categories
function displayFruitCategories() {
    const fruitsSection = document.getElementById('fruits');

    fruitCategories.forEach(category => {
        const categoryDiv = document.createElement('div');
        categoryDiv.innerHTML = `<h2>${category.name}</h2>`;

        category.items.forEach(item => {
            const itemDiv = document.createElement('div');
            itemDiv.innerHTML = `${item} - $${fruitPrices[item].toFixed(2)} <button onclick="addToCart('${item}')">Add to Cart</button>`;
            categoryDiv.appendChild(itemDiv);
        });

        fruitsSection.appendChild(categoryDiv);
    });
}

// Function to add items to the cart
function addToCart(item) {
    const cartSection = document.getElementById('cart');
    const cartItem = document.createElement('div');
    cartItem.innerHTML = `${item} - $${fruitPrices[item].toFixed(2)}`;
    cartSection.appendChild(cartItem);
}

// Function to toggle between login and sign-up forms
function toggleForm(formType) {
    const loginSection = document.getElementById('login');
    const signupSection = document.getElementById('signup');

    if (formType === 'login') {
        loginSection.style.display = 'block';
        signupSection.style.display = 'none';
    } else {
        loginSection.style.display = 'none';
        signupSection.style.display = 'block';
    }
}

// Initial function calls
displayFruitCategories();


*************** OR **********************
document.addEventListener('DOMContentLoaded', function () {
    const fruitsSection = document.getElementById('fruits');
    const cartSection = document.getElementById('cart');
    const loginSection = document.getElementById('login');
    const signupSection = document.getElementById('signup');

    // Sample fruit data (replace with your actual data)
    const fruits = [
        { id: 1, name: 'Apple', price: 1.5 },
        { id: 2, name: 'Banana', price: 0.75 },
        { id: 3, name: 'Orange', price: 1.0 },
        // Add more fruits as needed
    ];

    // Sample user data (replace with your actual data)
    let currentUser = null;

    // Display fruits
    function displayFruits() {
        fruitsSection.innerHTML = '';
        fruits.forEach(fruit => {
            const card = document.createElement('div');
            card.className = 'fruit-card';
            card.innerHTML = `
                <h3>${fruit.name}</h3>
                <p>$${fruit.price.toFixed(2)}</p>
                <button onclick="addToCart(${fruit.id})">Add to Cart</button>
            `;
            fruitsSection.appendChild(card);
        });
    }

    // Add to cart
    function addToCart(fruitId) {
        const selectedFruit = fruits.find(fruit => fruit.id === fruitId);
        if (selectedFruit) {
            const cartItem = { id: selectedFruit.id, name: selectedFruit.name, price: selectedFruit.price };
            updateCart(cartItem);
        }
    }

    // Update the cart
    function updateCart(cartItem) {
        // Sample cart handling (replace with actual logic)
        cartSection.innerHTML = '';
        const cartItemElement = document.createElement('div');
        cartItemElement.className = 'cart-item';
        cartItemElement.innerHTML = `
            <p>${cartItem.name} - $${cartItem.price.toFixed(2)}</p>
        `;
        cartSection.appendChild(cartItemElement);
    }

    // Toggle between login and signup forms
    function toggleForms() {
        loginSection.style.display = (loginSection.style.display === 'none') ? 'block' : 'none';
        signupSection.style.display = (signupSection.style.display === 'none') ? 'block' : 'none';
    }

    // Event listeners
    document.getElementById('show-login').addEventListener('click', toggleForms);
    document.getElementById('show-signup').addEventListener('click', toggleForms);

    // Initial display
    displayFruits();
});
